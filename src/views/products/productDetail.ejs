<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title: 'Detalle' , stylesheet: ['/css/styles.css','/css/productDetail.css']}) %>

    <body>
        <%- include('../partials/header') %>
            <h2 class="titulo">Producto Seleccionado</h2>

            <main>

                <div class="conteinerMain">
                    <section class="conteinerImage">
                        <figure class="productImage">
                            <img src="/img/products/<%= pSelected.image %>" alt="imagen de producto" width=80% height="300px auto">
                        </figure>
                    </section>

                    <section class="conteinerInfo">
                        <article class="product-detail-info">

                            <h2 class="product-detail-title">
                                <%= pSelected.name %>
                            </h2>

                            <p class="product-detail-description">
                                <%= pSelected.description %>
                            </p>

                            <p class="product-detail-price small">
                                <span>$<%= pSelected.price %></span>
                                <% if (pSelected.discount> 0) { %>
                                    <b>
                                        <%= pSelected.discount %>% OFF
                                    </b>
                                    <% } else { %>
                                        <b> 0 % OFF</b>
                                        <% } %>
                            </p>

                            <p class="product-detail-price">
                                $<%= pSelected.price %>
                                    <!-- falta final price (Calculo) -->
                            </p>

                            <p class="descriptionProd">
                                <%= pSelected.description %>
                            </p>
                            <p class="categoryProd">
                                <%= pSelected.category %>
                            </p>
                            <p>
                                <%= pSelected.colors %>
                            </p>


                            <ul class="actions-list">
                                <li>
                                    <i class="fas fa-credit-card"></i>
                                    <p><strong>Pag√° en 12 cuotas sin interes</p></strong>
                                </li>
                                <li>
                                    <i class="fas fa-store"></i>
                                    <p><strong>Retiro gratis en sucursal</p></strong>
                                </li>
                            </ul>

                            <div class="conteinerBoton">
                                <a href="/products/cart/<%= pSelected.id %>" class="boton"><button type="submit"
                                        class="boton">COMPRAR</button></a>
                            </div>


                        </article>
                    </section>


                </div>

                </div>
                <div class="adm">
                    
                    <form action="/products/delete/<%= pSelected.id %>?_method=DELETE" method="POST"
                        style="display: inline-flex"> <button type="submit" class="botonEL">ELIMINAR</button>
                    </form>
                    
                    <a href="/products/edit/<%= pSelected.id %>" class="enlace"><button type="submit"
                            class="botonED">EDITAR</button></a>

                </div>
            </main>

            <%- include('../partials/footer') %>
    </body>

</html>